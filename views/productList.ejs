<body>
<%- include('partials/header') %>

<main>
    <% for(let i = 0; i < allProducts.length ; i++) { %> 
    <div class="producto">
        
        <a href="/products/detail/<%= allProducts[i].id %> "> <img class="fotoproducto" src = "Imagenes/<%= allProducts[i].img %> "> </a> 
        <div class="infoProducto">  
        <i class="fas fa-shipping-fast"></i>
            <p id = "precios"> $ <%= allProducts[i].precio %>  </p>
            <p id= "descuentos"> <%= allProducts[i].descuento %>  % OFF </p>
            <br>
            <p id="nombreProducto"><b> <%= allProducts[i].name %>  </b></p>
    </div>
            
    <% } %> 
        </div>
    
        
</main>



</body>